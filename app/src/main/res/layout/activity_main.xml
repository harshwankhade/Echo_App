<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--
        ACTIVITY_MAIN.XML

        Purpose: Main container for the Navigation Component

        Architecture: Single-Activity with NavHostFragment
        - NavHostFragment handles fragment transitions
        - NavController manages navigation between destinations
        - All app navigation flows through this container

        Navigation Flow:
        - MainActivity hosts this layout
        - NavHostFragment loads nav_graph.xml
        - Starting destination is LoginFragment
        - All navigation actions defined in nav_graph.xml
    -->

    <!-- NavHostFragment: Container for all fragments -->
    <fragment
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:navGraph="@navigation/nav_graph" />

</LinearLayout>

